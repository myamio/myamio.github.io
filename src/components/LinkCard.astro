---
interface Props {
	title: string;
	url: string;
	description?: string;
}

const { title, url, description } = Astro.props;
---

<a
	href={url}
	target="_blank"
	rel="noopener noreferrer"
	class="block p-4 bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200"
>
	<h3 class="text-lg font-bold text-gray-900">{title}</h3>
	{description && <p class="mt-1 text-sm text-gray-600">{description}</p>}
</a>
